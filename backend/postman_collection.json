{
	"info": {
		"_postman_id": "your-collection-id",
		"name": "Home Tour API",
		"description": "API collection cho ứng dụng Home Tour",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Request OTP",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phoneNumber\": \"0123456789\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/request-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"request-otp"
							]
						},
						"description": "Gửi mã OTP đến số điện thoại"
					}
				},
				{
					"name": "Verify OTP",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phoneNumber\": \"0123456789\",\n    \"otp\": \"123456\",\n    \"name\": \"Nguyen Van A\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/verify-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"verify-otp"
							]
						},
						"description": "Xác thực mã OTP và đăng ký/đăng nhập"
					}
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phoneNumber\": \"0123456789\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "Đăng nhập bằng số điện thoại"
					}
				},
				{
					"name": "Verify Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phoneNumber\": \"0123456789\",\n    \"otp\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/verify-login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"verify-login"
							]
						},
						"description": "Xác thực OTP khi đăng nhập"
					}
				},
				{
					"name": "Check Login",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/check-login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"check-login"
							]
						},
						"description": "Kiểm tra trạng thái đăng nhập"
					}
				},
				{
					"name": "Refresh Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refreshToken\": \"{{refresh_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/refresh-token",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"refresh-token"
							]
						},
						"description": "Làm mới access token"
					}
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/logout",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"logout"
							]
						},
						"description": "Đăng xuất"
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000"
		},
		{
			"key": "access_token",
			"value": "your_access_token_here"
		},
		{
			"key": "refresh_token",
			"value": "your_refresh_token_here"
		}
	]
} 